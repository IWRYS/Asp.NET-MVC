@model List<WebTrainingMVC.Models.ContragentModels.ContragentResultModel>
@{
    ViewBag.Title = "AllContragentsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (!User.Identity.IsAuthenticated)
{
    if (Model.Count == 0)
    {
        <h2>you dont have any contragents.</h2>
    }
    else
    {
        <h2 align="center">All Contragents</h2>

        <table class="table-bordered" align="center">
            <thead>
                <tr>
                    <th>Contragent Name</th>
                    <th>Adress</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ContragentName</td>
                        <td>@item.Adress</td>
                        <td>@item.Email</td>

                    </tr>
                }
            </tbody>
        </table>
    }

}





